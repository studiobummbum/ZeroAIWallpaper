<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the shape and color of the background -->
    <solid android:color="#FFFFFF"/> <!-- Change the color to fit your design -->

    <!-- Optionally add a border -->
    <stroke android:width="1dp" android:color="#DDDDDD"/> <!-- Border color -->

    <!-- Set the corner radius -->
    <corners android:radius="16dp"/> <!-- Adjust the radius to control the curvature -->

    <!-- Optionally add padding -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
